%section#login
  %h1 Please log in to use plans
  = form_tag controller: :sessions, action: :create do
    %fieldset
      = label_tag :login, 'Plan name:'
      = text_field_tag :login
      %br/
      = label_tag :password, 'Password:'
      = password_field_tag :password
      %br/

      = submit_tag 'Log in'
