- content_for :head do
  = javascript_include_tag 'sha256'
  = javascript_include_tag 'sessions/new'
  = stylesheet_link_tag 'sessions/new'

%section#login
  %h1 Please log in to use plans
  = form_tag controller: :sessions, action: :create do
    %fieldset
      = label_tag :login, 'Plan name:'
      = text_field_tag :login
      %br/
      = label_tag :password, 'Password:'
      = password_field_tag :password
      %br/

      #robohash
        A unique robot we generated from your password:
        %img(src='http://robohash.org/.png?size=50x50')

      = submit_tag 'Log in'
