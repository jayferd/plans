%aside#sidebar
  - if current_account.logged_in?
    %nav#quicklinks
      %ul
        %li
          %a.help{href:help_path}
            Help
        %li
          %a.all_plans{href:all_plans_path}
            See All Plans
        %li
          %a.edit_plan{href:edit_plan_path(current_account.login)}
            Edit Plan
        %li
          %a.edit_account{href:edit_account_path(current_account.login)}
            Edit Account
        %li
          %a.logout{href:clear_sessions_path}
            Logout

    %nav#notifications
      %section#updated_plans
        %h1 Updated
        - updated_plans = current_account.updated_plans
        %ul
          - updated_plans.each do |plan|
            %li= plan.link
      %section#planlove
        %h1 Planlove
        - lovers = current_account.recent_lovers
        %ul
          - lovers.each do |lover|
            %li= lover.account.link
