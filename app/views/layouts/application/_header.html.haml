%header
  - if flash[:notice].present?
    #notice= flash[:notice]

  #welcome
    - if current_account.logged_in?
      Welcome back, #{plan_link(current_account)}.
      %a{href: url_for(controller: :sessions, action: :clear)} (Logout)
      %a{href: edit_account_path(current_account.login)} (Edit Account)
